generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}


model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  passwordHash String
  phone String
  role String 
  createdAt DateTime @default(now())

  products Product[]

  orders Order[]
}

model Product{
  id Int @id @default(autoincrement())
  title String
  description String
  price Float
  category String
  age Int
  isAvailable Boolean @default(true)
  stock_quantity Int
  sellerId Int
  seller User @relation(fields: [sellerId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  orderItems order_items[]
}

model Order{
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  order_status String
  totalAmount Float
  createdAt DateTime @default(now())

  orderItems order_items[]

  payments payment[]
}

model order_items{
  id Int @id @default(autoincrement())
  order_id Int
  order Order @relation(fields: [order_id], references: [id])
  productId Int
  product Product @relation(fields: [productId], references: [id])
  quantity Int
  price Float
}

model payment{
  id Int @id @default(autoincrement())
  orderId Int @unique
  order Order @relation(fields: [orderId], references: [id])
  amount Float
  method String
  status String
  transactionId String?
  createdAt DateTime @default(now())
}